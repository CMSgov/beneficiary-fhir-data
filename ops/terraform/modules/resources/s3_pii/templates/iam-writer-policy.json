${jsonencode(
{
  "Version": "2012-10-17",
  "Id": "bfd-${env}-${name}-iam-writer-policy",
  "Statement": [
    {
      "Sid": "BFDPIIS3ListAllBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets"
      ],
      "Resource": "arn:aws:s3:::*"
    },
    {
      "Sid": "BFDPIIS3ReadAll",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetObject",
        "s3:GetObjectVersion"
      ],
      "Resource": [
        "arn:aws:s3:::${bucket_id}",
        "arn:aws:s3:::${bucket_id}/*"
      ]
    },
    {
      "Sid": "BFDPIIS3WriteAssume",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucketMultiPartUploads",
        "s3:ListMultipartUploadParts",
        "s3:AbortMultipartUpload",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
      ],
      "Resource": [
        "arn:aws:s3:::${bucket_id}",
        "arn:aws:s3:::${bucket_id}/*"
      ]
    }
  ]
}
)}