{
  "variables": {
    "source_ami": "",
    "subnet_id": ""
  },
  "builders": [{
      "type": "amazon-ebs",
      "iam_instance_profile": "bfd-packer",
      "ssh_username": "ec2-user",
      "instance_type": "c6i.xlarge",
      "region": "us-east-1",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": "false",
      "source_ami": "{{user `source_ami`}}",
      "security_group_filter": {
        "filters": {
          "tag:Name": "bfd-mgmt-vpn-private"
        }
      },
      "ami_name": "bfd-etl-{{isotime \"20060102030405\"}}",
      "ssh_pty": true,
      "tags": {
        "Name": "bfd-etl-{{isotime \"20060102030405\"}}",
        "Application": "BFD",
        "Environment": "{{user `env`}}",
        "Function": "ETL APP SERVER",
        "Layer": "APP",
        "Branch": "{{user `git_branch`}}",
        "Commit": "{{user `git_commit`}}"
      }
  }],
  "provisioners": [{
      "type": "ansible",
      "playbook_file": "./build_bfd-pipeline.yml",
      "extra_arguments": [
        "--extra-vars",
        "git_commit={{ user `git_commit` }}",
        "--extra-vars",
        "git_branch={{ user `git_branch` }}",
        "--extra-vars",
        "@extra_vars.json",
        "--tags",
        "pre-ami"
      ],
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes'"
      ]
      },
      {
      "type": "file",
      "source": "extra_vars.json",
      "destination": "/tmp/extra_vars.json"
      }
  ],
  "post-processors": [{
    "type": "manifest",
    "output": "manifest_data-pipeline.json",
    "strip_path": true
  }]
}
