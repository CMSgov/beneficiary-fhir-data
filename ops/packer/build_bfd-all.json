{
  "variables": {
    "source_ami": "",
    "subnet_id": "",
    "vault_password_file": ""
  },
  "builders": [
    {
      "name": "bfd-docker-host",
      "type": "amazon-ebs",
      "iam_instance_profile": "bfd-packer",
      "ssh_username": "ec2-user",
      "instance_type": "c6i.xlarge",
      "region": "us-east-1",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": "false",
      "source_ami": "{{user `source_ami`}}",
      "security_group_filter": {
        "filters": {
          "tag:Name": "bfd-mgmt-vpn-private"
        }
      },
      "ami_name": "docker-host-{{isotime \"20060102030405\"}}",
      "ssh_pty": true,
      "tags": {
        "Name": "docker-host-{{isotime \"20060102030405\"}}",
        "Application": "BFD",
        "Environment": "{{user `env`}}",
        "Function": "DOCKER HOST",
        "Layer": "APP",
        "Branch": "{{user `git_branch`}}",
        "Commit": "{{user `git_commit`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "extra_vars.json",
      "destination": "/tmp/extra_vars.json"
    },
    {
      "only": ["bfd-docker-host"],
      "type": "ansible",
      "user": "ec2-user",
      "playbook_file": "./build_bfd-docker-host.yml",
      "extra_arguments": [
        "-e git_commit={{ user `git_commit` }}",
        "-e git_branch={{ user `git_branch` }}"
      ],
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes'",
        "ANSIBLE_VAULT_PASSWORD_FILE={{user `vault_password_file`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "only": ["bfd-docker-host"],
      "type": "manifest",
      "output": "manifest_docker-host.json",
      "strip_path": true
    }
  ]
}
