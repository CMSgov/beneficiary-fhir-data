{
  "variables": {
    "env": "",
    "source_ami": "",
    "subnet_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "iam_instance_profile": "bfd-{{user `env`}}-packer",
    "ssh_username": "ec2-user",
    "instance_type": "m5.xlarge",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "security_group_filter": {
      "filters": {
        "tag:Name": "bfd-mgmt-vpn-private"
      }
    },
    "ami_name": "bfd-jenkins-{{isotime \"20060102030405\"}}",
    "ssh_pty": true,
    "tags": {
      "Name": "bfd-jenkins-{{isotime \"20060102030405\"}}",
      "Application": "bfd-jenkins"
    }
   }
  ],
  "provisioners": [{
      "type": "ansible",
      "command": "./ansible-playbook-wrapper",
      "playbook_file": "./update_jenkins.yml",
      "extra_arguments": [
                           "--extra-vars",
                           "env={{user `env`}}",
                           "--extra-vars",
                           "ansible_python_interpreter=/usr/bin/python"
                         ], 
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes'"
    ]
    }
  ]
}
