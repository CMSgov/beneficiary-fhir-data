{
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "Environment": "{{ env }}"
    },
    "aggregation_dimensions" : [["Environment"]],
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "usage_idle",
          "usage_iowait",
          "usage_user",
          "usage_system"
        ]
      },
      "disk": {
        "measurement": [
          "used_percent",
          "inodes_free"
        ]
      },
      "diskio": {
        "measurement": [
          "io_time"
        ]
      },
      "mem": {
        "measurement": [
          "used_percent"
        ]
      },
      "swap": {
        "measurement": [
          "used_percent"
        ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/bluebutton-data-pipeline/bluebutton-data-pipeline.log",
            "log_group_name": "/bfd/{{ env }}/data-pipeline/message.txt",
            "log_stream_name": "{instance_id}",
            "timestamp_format": "%Y-%m-%d %H:%M:%S,%f",
            "multi_line_start_pattern": "^[\\d\\d\\d\\d-\\d\\d-\\d\\d ]"
          }
        ]
      }
    }
  }
}
