"{{ ref_dir }}/access.json" "{{ ref_dir }}/bluebutton-server-app-log.json" {
    rotate 1
    hourly
    #size of largest live logfile at time of creation was 272M w/out log rotation
    size 300M
    copytruncate
    compress
    missingok
    dateext
    #force filenames to be unique - rotation will not run if a duplicate filename exists
    dateformat -%Y%m%d-%s
}

