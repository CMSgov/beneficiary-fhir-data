export LOADER_THREADS='{{ data_pipeline_loader_threads }}'
export IDEMPOTENCY_REQUIRED='{{ data_pipeline_idempotency_required }}'
export NEW_RELIC_METRIC_HOST='{{ data_pipeline_new_relic_metric_host }}'
