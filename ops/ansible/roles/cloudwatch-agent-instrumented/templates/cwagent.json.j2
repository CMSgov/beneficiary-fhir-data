{
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "Environment": "{{ env }}"
    },
    "aggregation_dimensions" : [["AutoScalingGroupName", "Environment"]],
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "usage_idle",
          "usage_iowait",
          "usage_user",
          "usage_system"
        ]
      },
      "disk": {
        "measurement": [
          "used_percent",
          "inodes_free"
        ]
      },
      "diskio": {
        "measurement": [
          "io_time"
        ]
      },
      "mem": {
        "measurement": [
          "used_percent"
        ]
      },
      "swap": {
        "measurement": [
          "used_percent"
        ]
      }
    }
  }
}