<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zip</id>
	<includeBaseDirectory>true</includeBaseDirectory>

	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/assembly/bin</directory>
			<outputDirectory>/</outputDirectory>
			<directoryMode>0700</directoryMode>
			<fileMode>0700</fileMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>${project.groupId}:${project.artifactId}:jar:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
				<!-- Exclude unused test dependencies; if you need these, remove exclusion -->
				<exclude>org.jetbrains:annotations:jar:*</exclude>
				<exclude>com.github.ben-manes.caffeine:caffeine:jar:*</exclude>
				<exclude>com.fasterxml:classmate:jar:*</exclude>
				<exclude>io.dropwizard:dropwizard-jackson:jar:*</exclude>
				<exclude>io.dropwizard:dropwizard-lifecycle:jar:*</exclude>
				<exclude>com.fasterxml.jackson.datatype:jackson-datatype-jsr310:jar:*</exclude>
				<exclude>com.fasterxml.jackson.datatype:jackson-datatype-guava:jar:*</exclude>
				<exclude>com.fasterxml.jackson.datatype:jackson-datatype-jdk8:jar:*</exclude>
				<exclude>com.fasterxml.jackson.module:jackson-module-parameter-names:jar:*</exclude>
				<exclude>com.fasterxml.jackson.module:jackson-module-blackbird:jar:*</exclude>
				<exclude>com.fasterxml.jackson.datatype:jackson-datatype-joda:jar:*</exclude>
				<exclude>io.dropwizard:dropwizard-util:jar:*</exclude>
				<exclude>io.dropwizard:dropwizard-validation:jar:*</exclude>
				<exclude>org.hibernate.validator:hibernate-validator:*</exclude>
				<exclude>org.jboss.logging:jboss-logging:*</exclude>
				<exclude>org.glassfish:jakarta.el:jar:*</exclude>
				<exclude>jakarta.validation:jakarta.validation-api:*</exclude>
				<exclude>com.squareup.okio:okio:jar:*</exclude>
				<exclude>com.squareup.okhttp3:okhttp:jar:*</exclude>
				<exclude>org.jetbrains.kotlin:kotlin-stdlib:jar:*</exclude>
				<exclude>org.jetbrains.kotlin:kotlin-stdlib-common:jar:*</exclude>
				<exclude>io.dropwizard:dropwizard-metrics:jar:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
