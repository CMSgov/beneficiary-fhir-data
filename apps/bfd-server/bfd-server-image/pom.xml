<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>gov.cms.bfd</groupId>
        <artifactId>bfd-server-parent</artifactId>
        <version>2.236.0</version>
    </parent>

    <artifactId>bfd-server-image</artifactId>
    <packaging>jar</packaging>

    <description>
        Builds a BFD Server docker image using Jib plugin.
    </description>

    <properties>
        <!-- There is no java code to check. -->
        <checkstyle.skip>true</checkstyle.skip>
        <!-- There is no javadoc to generate. -->
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <!-- Name of the image generated by jib plugin. -->
        <image-name>bfd-server</image-name>
    </properties>

    <dependencies>
        <dependency>
            <!-- BFD WAR file is required to build the image. -->
            <groupId>gov.cms.bfd</groupId>
            <artifactId>bfd-server-war</artifactId>
            <type>war</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <!-- BFD launcher zip file is required to build the image. -->
            <groupId>gov.cms.bfd</groupId>
            <artifactId>bfd-server-launcher</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <!-- Configure the dependency plugin such that it can be used to grab
                        the dependency artifacts, for image creation. -->
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven.dependency.plugin.version}</version>
                    <configuration>
                        <overWriteReleases>false</overWriteReleases>
                        <overWriteSnapshots>true</overWriteSnapshots>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <!-- Used to build docker image for the project. -->
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <dependencies>
                    <dependency>
                        <groupId>org.ow2.asm</groupId>
                        <artifactId>asm</artifactId>
                        <version>${asm.version}</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <to>
                        <image>${jib.namespace}${image-name}:${project.version}</image>
                        <tags>
                            <tag>${jib.tag}</tag>
                        </tags>
                    </to>
                    <container>
                        <environment>
                            <BFD_PATHS_FILES_WAR>/app/libs/bfd-server-war-${project.version}.war</BFD_PATHS_FILES_WAR>
                        </environment>
                        <jvmFlags>
                            <jvmFlag>-Dorg.jboss.logging.provider=slf4j</jvmFlag>
                        </jvmFlags>
                        <mainClass>gov.cms.bfd.server.launcher.DataServerLauncherApp</mainClass>
                        <ports>
                            <port>6500</port>
                        </ports>
                    </container>
                </configuration>
                <executions>
                    <execution>
                        <id>build-image</id>
                        <phase>package</phase>
                        <goals>
                            <goal>${jib.goal}</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
